# =============================================================================
# Autonomous Multi-Agent Business Intelligence System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Autonomous Multi-Agent Business Intelligence System
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Set to 'true' to use local Ollama, 'false' for cloud-only (Claude)
USE_LOCAL_LLM=true

# Ollama Settings (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M

# Claude API (Required for cloud features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# Vector Database (ChromaDB)
# -----------------------------------------------------------------------------
CHROMA_PERSIST_DIR=./data/embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/sample/sales_db.sqlite

# For PostgreSQL (Azure)
# DATABASE_URL=postgresql://user:password@server.postgres.database.azure.com/datagenie

# -----------------------------------------------------------------------------
# Power BI Integration (Optional)
# -----------------------------------------------------------------------------
# Get these from Azure Portal > App Registrations
POWERBI_CLIENT_ID=
POWERBI_CLIENT_SECRET=
POWERBI_TENANT_ID=
POWERBI_WORKSPACE_ID=

# -----------------------------------------------------------------------------
# Azure Configuration (Optional - for cloud deployment)
# -----------------------------------------------------------------------------
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=datagenie-rg
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=datagenie-data

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# -----------------------------------------------------------------------------
# Streamlit Settings
# -----------------------------------------------------------------------------
STREAMLIT_PORT=8501
STREAMLIT_THEME=light

# -----------------------------------------------------------------------------
# Resource Limits (Optimized for 8GB RAM)
# -----------------------------------------------------------------------------
MAX_CONCURRENT_REQUESTS=2
OLLAMA_NUM_CTX=4096
OLLAMA_NUM_GPU=0
MAX_TOKENS_PER_REQUEST=2000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:8501,http://localhost:3000
